// The root project TypeScript compiler config. This defines common compiler options
// used across Angular, Jest, and default builds.
{
  "compileOnSave": false,
  "compilerOptions": {
    "importHelpers": true,
    "outDir": "./tsc-out",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "lib": [
      "es2018",
      "es2018.promise",
      "dom"
    ],
    "baseUrl": "./src",
    "jsx": "react",
    "resolveJsonModule": true
  }
}
