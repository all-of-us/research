{
  "extends": "../common-ui/tslint.json",
  "rulesDirectory": [
    "node_modules/codelyzer",
    "node_modules/tslint-microsoft-contrib",
    "node_modules/tslint-eslint-rules/dist/rules"
  ],
  "linterOptions": {
    "exclude": [
      "**/src/generated/**/*.ts",
      "**/src/notebooks-generated/**/*.ts",
      "**/src/publicGenerated/**/*.ts",
      "**/node_modules/**/*"
    ]
  },
  "rules": {
    "no-relative-imports": [
      true,
      "allow-siblings"
    ],
    "ter-indent": [
      true,
      2,
      {
        "SwitchCase": 1,
        "MemberExpression": 1,
        "FunctionDeclaration": {
          "parameters": 1
        },
        "FunctionExpression": {
          "parameters": 1
        },
        "CallExpression": {
          "arguments": 1
        }
      }
    ]
  }
}
