<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog/1.9"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog/1.9
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-1.9.xsd">
  <changeSet author="thibault" id="changelog-14y-add-access-tier-to-billing-buffer">
    <addColumn tableName="billing_project_buffer_entry">
      <column name="access_tier_2" type="bigint"/>
    </addColumn>

    <!-- dummy value to ensure FK is initially satisfied -->
    <sql>
      UPDATE billing_project_buffer_entry
      SET access_tier_2 = 1
    </sql>

    <addNotNullConstraint tableName="billing_project_buffer_entry" columnName="access_tier_2" columnDataType="bigint"/>

    <addForeignKeyConstraint baseColumnNames="access_tier_2"
      baseTableName="billing_project_buffer_entry"
      constraintName="fk_billing_buffer_tier"
      onDelete="CASCADE"
      referencedColumnNames="access_tier_id"
      referencedTableName="access_tier"/>
  </changeSet>
</databaseChangeLog>