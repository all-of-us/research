  <changeSet author="brianfreeman" id="changelog-5" runAlways="true">

    <sql dbms="mysql"
         endDelimiter=";"
         splitStatements="true"
         stripComments="true">update criteria t1
      inner join criteria t2 on (t1.parent_id = t2.sort_order and t1.type like 'DEMO%' and t2.type like 'DEMO%')
      set t1.parent_id = t2.id
      <comment>Need to update parent ids after data is inserted in the criteria table.</comment>
    </sql>

  </changeSet>
</databaseChangeLog>
