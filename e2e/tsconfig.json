{
  "compileOnSave": false,
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "importHelpers": true,
    "sourceMap": true,
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "ES2016",
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "noUnusedParameters": true,
    "pretty": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "./tsc-out",
    "allowJs": true,
    "baseUrl": "./",
    "jsx": "react",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "lib": [
      "ES2016",
      "es2018.promise",
      "dom"
    ]
  },
  "exclude": [ "tsc-out", "**/node_modules", "node_modules" ]
}
